+# Copyright 2024 The Chromium Authors
+# Use of this source code is governed by a BSD-style license that can be
+# found in the LICENSE file.
+
+import("//build/config/chrome_build.gni")
+
+# Validate that required resources exist at build time
+# GN will fail at generation time if resources/bin/e_governmentos_server is missing
+_e_governmentos_binary_name = "e_governmentos_server"
+if (is_win) {
+  _e_governmentos_binary_name += ".exe"
+}
+
+action("validate_e_governmentos_resources") {
+  script = "validate_resources.py"
+  inputs = [ "resources/bin/${_e_governmentos_binary_name}" ]
+  outputs = [ "$target_gen_dir/e_governmentos_resources_validated" ]
+}
+
+source_set("e_governmentos_server") {
+  sources = [
+    "e_governmentos_server_manager.cc",
+    "e_governmentos_server_manager.h",
+    "e_governmentos_server_prefs.cc",
+    "e_governmentos_server_prefs.h",
+  ]
+
+  deps = [
+    "//base",
+    "//chrome/browser:browser_process",
+    "//chrome/common",
+    "//components/prefs",
+    "//content/public/browser",
+    "//net",
+  ]
+}
+
+if (is_mac) {
+  import("//build/config/apple/symbols.gni")
+  import("//build/config/mac/mac_sdk.gni")
+
+  # Bundle data for macOS - recursively packages resources/ to Resources/e-GovernmentOSServer/default/
+  bundle_data("e_governmentos_resources_bundle") {
+    sources = [ "resources" ]
+    outputs = [ "{{bundle_resources_dir}}/e-GovernmentOSServer/default/{{source_file_part}}" ]
+    # TODO: Re-enable validation when resources/bin/e_governmentos_server is available
+    # deps = [ ":validate_e_governmentos_resources" ]
+  }
+} else {
+  # Copy for Windows/Linux - recursively packages resources/ to <exe_dir>/e-GovernmentOSServer/default/
+  copy("e_governmentos_resources_copy") {
+    sources = [ "resources" ]
+    outputs = [ "$root_out_dir/e-GovernmentOSServer/default/{{source_file_part}}" ]
+    # TODO: Re-enable validation when resources/bin/e_governmentos_server is available
+    # deps = [ ":validate_e_governmentos_resources" ]
+  }
+}
+
+# Group for all e-GovernmentOS server resources
+group("e_governmentos_server_resources") {
+  if (is_mac) {
+    deps = [ ":e_governmentos_resources_bundle" ]
+  } else {
+    deps = [ ":e_governmentos_resources_copy" ]
+  }
+}
